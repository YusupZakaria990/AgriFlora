<!DOCTYPE html>
<html lang="en">
<%= stylesheet_link_tag "admin" %>
<%= render 'layouts/header' %>
<%= render 'layouts/sidebar' %>

  <main class="main-content position-relative max-height-vh-100 h-100 mt-1 border-radius-lg ">
    <!-- Navbar -->
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur" navbar-scroll="true">
      <div class="container-fluid py-1 px-3">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
            <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Form</a></li>
            <li class="breadcrumb-item text-sm text-dark active" aria-current="page">New Product</li>
          </ol>
          <h6 class="font-weight-bolder mb-0">New Product</h6>
        </nav>
        <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
          <div class="ms-md-auto pe-md-3 d-flex align-items-center">
          </div>
          <ul class="navbar-nav  justify-content-end">
            <li class="nav-item d-flex align-items-center">
            <%= link_to destroy_user_session_path, method: :delete do %>
              <span class="text-sm">
                <i class="fa fa-sign-out me-sm-1"></i>
                Sign Out
              </span>
            <% end %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card mb-4">
            <div class="card-header pb-0">
              <h4>Product Detail</h4>
              <div id="<%= dom_id product %>">
              <p>
                <strong>Code:</strong>
                <%= product.code %>
              </p>

              <p>
                <strong>Product name:</strong>
                <%= product.product_name %>
              </p>

              <p>
                <strong>Category:</strong>
                <%= product.category.name %>
              </p>

              <p>
                <strong>Stock:</strong>
                <%= product.stock %>
              </p>
              <br>
              <div class="flex-container">
              <% (0...@product.images.count).each do |image| %>
                <%= image_tag(@product.images[image], style: "width:100%; height:auto") %>
              <% end %>
              </div>
              <br><br>
                <%= button_to "Destroy this product", @product, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, :class => 'btn btn-danger'%>
            </div>
              <div class="foots">
                <%= link_to "Back to products", products_path %>
              </div>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>


  <!--   Core JS Files   -->
    <%= javascript_include_tag "popper.min.js" %>
   <%= javascript_include_tag "bootstrap.min.js" %>
   <%= javascript_include_tag "perfect-scrollbar.min.js" %>
   <%= javascript_include_tag "smooth-scrollbar.min.js" %>
   <%= javascript_include_tag "chartjs.min.js" %>
  <script>
    var win = navigator.platform.indexOf('Win') > -1;
    if (win && document.querySelector('#sidenav-scrollbar')) {
      var options = {
        damping: '0.5'
      }
      Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
    }
  </script>
  <!-- Github buttons -->
  <%= javascript_include_tag "https://buttons.github.io/buttons.j" %>
  <%= javascript_include_tag "soft-ui-dashboard.min.js?v=1.0.3" %>
</body>

</html>